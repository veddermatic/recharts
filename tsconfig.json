{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "target": "es5"
  },
  "include": [
    "./src/**/*", "types.d.ts"
  ]
}
